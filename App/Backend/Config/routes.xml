<?xml version="1.0" encoding="utf-8" ?>
<routes>
  <!-- ROUTE TO GO TO INDEX PAGE -->
  <route url="/projet-5-airfrance/Web/" module="Stocks" action="index" ></route>

  <!-- ================================================================================================================================ -->
  <!-- =================================================== STOCKS PAGE ================================================================ -->
  <!-- ================================================================================================================================ -->

  <!-- ROUTE TO GO TO STOCKS PAGE -->
  <route url="/projet-5-airfrance/Web/stocks-([A-Za-z]+)-(All)" module="Stocks" action="filter" vars="company,dot" ></route>
  <route url="/projet-5-airfrance/Web/stocks-([A-Za-z]+)-filter-([A-Z]+)" module="Stocks" action="filter" vars="company,dot"></route>
 
  <!-- ROUTE TO DECREASE STOCK ITEMS -->
  <route url="/projet-5-airfrance/Web/stocks-([A-Za-z]+)-decrease-([0-9]+)-filter-(All)" module="Stocks" action="decrease" vars="company,id,dot"></route>
  <route url="/projet-5-airfrance/Web/stocks-([A-Za-z]+)-decrease-([0-9]+)-filter-([A-Z]+)" module="Stocks" action="decrease" vars="company,id,dot"></route>

  <!-- ROUTE TO INCREASE STOCK ITEMS -->
  <route url="/projet-5-airfrance/Web/stocks-([A-Za-z]+)-increase-([0-9]+)-filter-(All)" module="Stocks" action="increase" vars="company,id,dot"></route>
  <route url="/projet-5-airfrance/Web/stocks-([A-Za-z]+)-increase-([0-9]+)-filter-([A-Z]+)" module="Stocks" action="increase" vars="company,id,dot"></route>

  <!-- ROUTE TO DELETE STOCK ITEMS -->
  <route url="/projet-5-airfrance/Web/stocks-([A-Za-z]+)-delete-([0-9]+)-filter-(All)" module="Stocks" action="delete" vars="company,id,dot"></route>
  <route url="/projet-5-airfrance/Web/stocks-([A-Za-z]+)-delete-([0-9]+)-filter-([A-Z]+)" module="Stocks" action="delete" vars="company,id,dot"></route>

  <!-- ROUTE TO ADD STOCK ITEMS -->
  <route url="/projet-5-airfrance/Web/stocks-([A-Za-z]+)-add" module="Stocks" action="add" vars='company'></route>

  <!-- ROUTE TO OPEN THE UPDATE BOX -->
  <route url="/projet-5-airfrance/Web/stocks-([A-Za-z]+)-(All)-updateBox-([0-9]+)" module="Stocks" action="filter" vars='company,dot,id'></route>
  <route url="/projet-5-airfrance/Web/stocks-([A-Za-z]+)-updateBox-([0-9]+)-filter-([A-Z]+)" module="Stocks" action="filter" vars='company,id,dot'></route>

  <!-- ROUTE TO UPDATE SERIAL NUMBER AND SHELF LIFE -->
  <route url="/projet-5-airfrance/Web/stocks-([A-Za-z]+)-(All)-update-([0-9]+)" module="Stocks" action="update" vars="company,dot,id"></route>
  <route url="/projet-5-airfrance/Web/stocks-([A-Za-z]+)-update-([0-9]+)-filter-([A-Z]+)" module="Stocks" action="update" vars="company,id,dot"></route>

  <!-- ROUTE TO CLOSE A TOPIC -->
  <route url="/projet-5-airfrance/Web/communication-onGoing-([0-9]+)-closeTopic" module="Comms" action="closeTopic" vars="id"></route>

  <!-- ROUTE TO RE-OPEN A TOPIC -->
  <route url="/projet-5-airfrance/Web/communication-postsClosed-([0-9]+)-openTopic" module="Comms" action="openTopic" vars="id"></route>


<!-- ============================================================================================================================================== -->
<!-- =========================================================== COMMUNICATION PAGE =============================================================== -->
<!-- ============================================================================================================================================== -->


  <!-- ROUTE TO GO TO INDEX PAGE -->
  <route url="/projet-5-airfrance/Web/communication" module="Comms" action="index" ></route>

  <!-- ROUTE TO CREATE A NEW POST -->
  <route url="/projet-5-airfrance/Web/communication-newPost" module="Comms" action="newPost" ></route>

  <!-- ROUTE TO GO TO A ONGOING POST SPECIFIED BY ITS ID -->
  <route url="/projet-5-airfrance/Web/communication-onGoing-([0-9]+)" module="Comms" action="onGoing" vars='id' ></route>

  <!-- ROUTE TO GO TO A ARCHIVE POST SPECIFIED BY ITS ID -->
  <route url="/projet-5-airfrance/Web/communication-archives-([0-9]+)" module="Comms" action="archives" vars='id' ></route>

  <!-- ROUTE TO GO TO POST A COMMENT -->
  <route url="/projet-5-airfrance/Web/communication-onGoing-([0-9]+)-newComment" module="Comms" action="newComment" vars='id' ></route>

</routes>